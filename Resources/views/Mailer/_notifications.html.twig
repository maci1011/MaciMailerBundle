
{% if list|length %}


<div class="list-default">
<table class="table table-striped">

<thead>
<tr class="list-header">

	<th class="list-header id">
		<span class="list-title">Id</span>
	</th>

	<th class="list-header">
		<span class="list-title">Subject</span>
	</th>

	<th class="list-header">
		<span class="list-title">Recipient</span>
	</th>

	<th class="list-header">
		<span class="list-title">Date</span>
	</th>

	<th class="list-header-last list-header-actions">
		<span class="list-title">Actions</span>
	</th>

</tr>
</thead>

<tbody>

{% for item in list %}

<tr class="list-item">

	<td class="list-item-id">
		<span>{{ item.id }}</span>
	</td>

	<td>
		<span>{{ item.subject }}</span>
	</td>

	<td>
		<span>{{ item.user }}</span>
	</td>

	<td>
		<span>{{ item.created|date('d/m/Y') }}</span>
	</td>

	<td class="list-item-actions">
		<a class="btn btn-sm" href="{{ path('maci_mailer_show', {'token': item.token}) }}" target="_blank">
			<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Show
		</a>
	</td>

</tr>

{% endfor %}

</tbody>

</table>
</div>

{% endif %}
